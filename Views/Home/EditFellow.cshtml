@using Sensitive_Data_Application.Models
@* Declare Model That's Being Passed From The Controller' *@
@model Sensitive_Data_Application.Models.Fellow

@{
    ViewBag.Title = "Update Fellow Details";
}

<h2>@ViewBag.Title</h2>
<div>
    @using (Html.BeginForm("PostEditedFellow", "Home", new { Id = ViewBag.Id }, FormMethod.Post, new { Class = "shadow p-5 mb-5 bg-light rounded" }))
    {
        <div class="form-group row mb-3">
            @Html.LabelFor(f => f.Name, new { Class = "col-sm-2 col-form-label col-form-label-lg" })
            <div class="col-sm-10">
                @Html.TextBoxFor(f => f.Name, new { Class = "form-control form-control-lg", PlaceHolder = "Name", Value = Model.Name, @required = "Required" })
            </div>
        </div>
        <div class="form-group row mb-3">
            @Html.LabelFor(f => f.Surname, new { Class = "col-sm-2 col-form-label col-form-label-lg" })
            <div class="col-sm-10">
                @Html.TextBoxFor(f => f.Surname, new { Class = "form-control form-control-lg", PlaceHolder = "Surname", Value = Model.Surname, @required = "Required" })
            </div>
        </div>
        <div class="form-group row mb-3">
            @Html.LabelFor(f => f.CompanyFound, new { Class = "col-sm-2 col-form-label col-form-label-lg" })
            <div class="col-sm-10">
                @Html.TextBoxFor(f => f.CompanyFound, new { Class = "form-control form-control-lg", PlaceHolder = "Company Founded", Value = Model.CompanyFound, @required = "Required" })
            </div>
        </div>
        <div class="form-group row mb-3">
            @Html.LabelFor(f => f.Year, new { Class = "col-sm-2 col-form-label col-form-label-lg" })
            <div class="col-sm-10">
                @Html.TextBoxFor(f => f.Year, new { Type = "number", Class = "form-control form-control-lg", PlaceHolder = "Company Founded", Value = Model.Year, @required = "Required" })
            </div>
        </div>
        <input type="submit" value="Save" class="btn btn-success" />
    }
</div>

